@startuml diagrama_lms_atualizado

top to bottom direction

abstract class Usuario{
    -long idUsuario
    -String nome
    -String email
    -String senha
    -String cpf
}

class Administrador extends Usuario {
}

class Professor extends Usuario {
}

class Aluno extends Usuario {
}

class Curso{
    -long idCurso
    -string nomeCurso
    -string descicaoCurso
}

class Disciplina{
    -long idDisciplina
    -string nomeDisciplina
    -string descricaoDisciplina
}

class Turma{
    -long idTurma
    -int periodo
}

class Matricula {
    -long idMatricula
    -Status statusMatricula
}

enum Status {
    ATIVA
    PENDENTE
    REPROVADA
}

class Topicos{
    -long idTopicos
    -String tituloTopico
}

class MaterialDeAula{
    -long idMaterialDeAula
    -String arquivoDeTexto
    -String tipoArquivo
}


abstract class Atividade{
    -long idAtividade
    -String tituloAtividade
    -String descricaoAtividade
    -LocalDate dataInicioAtividade
    -LocalDate dataFechamentoAtividade
    -Boolean statusAtividade
}

class AtividadeTexto extends Atividade {
    -long numeroMaximoCaracteres
}

class AtividadeArquivos extends Atividade {
    -List<String> arquivosPermitidos
}

class Questionario extends Atividade{
    -long duracaoQuestionario
    -int numeroTentativas
}

class Questoes{
    -long idQuestoes
    -String enunciado
}

class Alternativas{
    -long idAlternativas
    -String Alternativas
    -boolean alternativaCorreta
}


class tentativasQuestionario{
    -long idtentativasQuestionario
    -Double nota
    -int numeroDaTentativa
}

class tentativaAtividade{
    -long idtentativaAtividade
    -String feedback
    -Double nota
}

Usuario <|-- Administrador
Usuario <|-- Professor
Usuario <|-- Aluno

Atividade <|-- Questionario
Atividade <|-- AtividadeTexto
Atividade <|-- AtividadeArquivos

Curso -- Turma
Disciplina -- Turma
Professor -- Turma
Aluno -- Matricula
Matricula -- Turma
Matricula --> Status
Turma -- Topicos
Topicos -- MaterialDeAula
Topicos -- Atividade

Questionario -- Questoes
Questoes -- Alternativas
Questionario -- tentativasQuestionario
tentativasQuestionario -- Aluno

Atividade -- tentativaAtividade
tentativaAtividade -- Aluno

@enduml